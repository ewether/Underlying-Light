            <script>
              //map options
              function initMap() {
                var options = {
                  zoom:8,
                  center:{lat:42.5922,lng:-83.3362}
                }

                //new map
                var map = new google.maps.Map(document.getElementById('map'), options);

                //add marker
                var marker = new google.maps.Marker({
                  position:{lat:42.7845,lng:-83.2397},
                  map:map,
                  icon:''
                });

                //add popup when user clicks on marker
                var infoWindow = new google.maps.InfoWindow({
                  content:'<h1>Book Appointment</h1>'
                });

                marker.addListener('click', function(){
                  infoWindow.open(map, marker);
                });

              }
            </script>
            <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBGdISCeOWf4Fp9TLdeeA-x-X7e1qunU04&callback=initMap">
